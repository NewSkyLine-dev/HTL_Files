<Window x:Class="Server.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Chat Server Administration"
        Height="600"
        Width="1000"
        WindowStartupLocation="CenterScreen">
        <Grid>
                <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Control Panel -->
                <Border Grid.Row="0"
                        Background="#F0F0F0"
                        Padding="10">
                        <StackPanel Orientation="Horizontal">
                                <Button x:Name="StartButton"
                                        Content="ðŸŸ¢ Start Server"
                                        Width="120"
                                        Height="35"
                                        Click="StartButton_Click"
                                        Margin="0,0,10,0"
                                        FontWeight="Bold"/>
                                <Button x:Name="StopButton"
                                        Content="ðŸ”´ Stop Server"
                                        Width="120"
                                        Height="35"
                                        Click="StopButton_Click"
                                        IsEnabled="False"
                                        FontWeight="Bold"/>
                                <Separator Margin="20,0"/>
                                <TextBlock Text="Port:"
                                           VerticalAlignment="Center"
                                           Margin="0,0,5,0"/>
                                <TextBox x:Name="PortTextBox"
                                         Text="8888"
                                         Width="60"
                                         Height="25"
                                         VerticalAlignment="Center"/>
                                <Button x:Name="ClearLogButton"
                                        Content="Clear Log"
                                        Width="80"
                                        Height="25"
                                        Click="ClearLogButton_Click"
                                        Margin="20,0,0,0"/>
                        </StackPanel>
                </Border>

                <!-- Main Content -->
                <Grid Grid.Row="1"
                      Margin="10">
                        <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="2*"/>
                                <ColumnDefinition Width="5"/>
                                <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Activity Log -->
                        <GroupBox Grid.Column="0"
                                  Header="ðŸ“‹ Server Activity Log">
                                <ListBox x:Name="ActivityListBox"
                                         ScrollViewer.HorizontalScrollBarVisibility="Auto"
                                         ScrollViewer.VerticalScrollBarVisibility="Auto"
                                         FontFamily="Consolas"
                                         FontSize="12"/>
                        </GroupBox>

                        <GridSplitter Grid.Column="1"
                                      HorizontalAlignment="Stretch"
                                      Background="LightGray"/>

                        <!-- Server Statistics -->
                        <GroupBox Grid.Column="2"
                                  Header="ðŸ“Š Server Statistics">
                                <StackPanel Margin="10">
                                        <Border Background="#E3F2FD"
                                                Padding="8"
                                                Margin="0,0,0,10"
                                                CornerRadius="3">
                                                <StackPanel>
                                                        <TextBlock Text="Connected Clients"
                                                                   FontWeight="Bold"
                                                                   FontSize="12"/>
                                                        <TextBlock x:Name="ConnectedClientsText"
                                                                   Text="0"
                                                                   FontSize="18"
                                                                   FontWeight="Bold"
                                                                   Foreground="#1976D2"
                                                                   HorizontalAlignment="Center"/>
                                                </StackPanel>
                                        </Border>

                                        <Border Background="#E8F5E8"
                                                Padding="8"
                                                Margin="0,0,0,10"
                                                CornerRadius="3">
                                                <StackPanel>
                                                        <TextBlock Text="Total Messages"
                                                                   FontWeight="Bold"
                                                                   FontSize="12"/>
                                                        <TextBlock x:Name="TotalMessagesText"
                                                                   Text="0"
                                                                   FontSize="18"
                                                                   FontWeight="Bold"
                                                                   Foreground="#388E3C"
                                                                   HorizontalAlignment="Center"/>
                                                </StackPanel>
                                        </Border>

                                        <Border Background="#FFF3E0"
                                                Padding="8"
                                                Margin="0,0,0,10"
                                                CornerRadius="3">
                                                <StackPanel>
                                                        <TextBlock Text="Active Rooms"
                                                                   FontWeight="Bold"
                                                                   FontSize="12"/>
                                                        <TextBlock x:Name="ActiveRoomsText"
                                                                   Text="0"
                                                                   FontSize="18"
                                                                   FontWeight="Bold"
                                                                   Foreground="#F57C00"
                                                                   HorizontalAlignment="Center"/>
                                                </StackPanel>
                                        </Border>

                                        <Border Background="#FCE4EC"
                                                Padding="8"
                                                Margin="0,0,0,10"
                                                CornerRadius="3">
                                                <StackPanel>
                                                        <TextBlock Text="Registered Users"
                                                                   FontWeight="Bold"
                                                                   FontSize="12"/>
                                                        <TextBlock x:Name="RegisteredUsersText"
                                                                   Text="0"
                                                                   FontSize="18"
                                                                   FontWeight="Bold"
                                                                   Foreground="#C2185B"
                                                                   HorizontalAlignment="Center"/>
                                                </StackPanel>
                                        </Border>

                                        <Separator Margin="0,10"/>

                                        <TextBlock Text="Server Started:"
                                                   FontWeight="Bold"
                                                   FontSize="11"/>
                                        <TextBlock x:Name="ServerStartTimeText"
                                                   Text="-"
                                                   FontSize="11"
                                                   Margin="0,0,0,5"/>

                                        <TextBlock Text="Uptime:"
                                                   FontWeight="Bold"
                                                   FontSize="11"/>
                                        <TextBlock x:Name="UptimeText"
                                                   Text="-"
                                                   FontSize="11"/>
                                </StackPanel>
                        </GroupBox>
                </Grid>

                <!-- Status Bar -->
                <StatusBar Grid.Row="2"
                           Background="#F5F5F5">
                        <StatusBarItem>
                                <StackPanel Orientation="Horizontal">
                                        <Ellipse x:Name="StatusIndicator"
                                                 Width="10"
                                                 Height="10"
                                                 Fill="Red"
                                                 Margin="0,0,5,0"/>
                                        <TextBlock x:Name="StatusText"
                                                   Text="Server stopped"/>
                                </StackPanel>
                        </StatusBarItem>
                        <Separator/>
                        <StatusBarItem>
                                <TextBlock x:Name="LastActivityText"
                                           Text="No activity"/>
                        </StatusBarItem>
                </StatusBar>
        </Grid>
</Window>
