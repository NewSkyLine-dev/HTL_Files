<Window x:Class="Robotersteuerung.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Robotersteuerung"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition />
        </Grid.RowDefinitions>

        <!-- Options -->
        <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="5">
            <Button Margin="0,0,5,0" Click="LoadLevel_Click">Load Level</Button>
            <Button Margin="0,0,5,0">Load Code</Button>
            <Button Margin="0,0,5,0">Parse</Button>
            <Button Margin="0,0,5,0">Run</Button>
        </StackPanel>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <TextBox Grid.Column="0" TextWrapping="Wrap"/>
            <Grid Grid.Column="1" x:Name="Playground"/>
        </Grid>
    </Grid>
</Window>
