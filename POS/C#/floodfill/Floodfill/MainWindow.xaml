<Window x:Class="PixelDraw.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Floodfill" SizeToContent="WidthAndHeight">
    <DockPanel>
        <StackPanel Orientation="Horizontal" DockPanel.Dock="Top">
            <Button Width="40" Height="20" Margin="5" Background="#9eb8c5" Click="Button_Click">21</Button>
            <Button Width="40" Height="20" Margin="0 5 5 5" Background="#cfa8a9" Click="Button_Click">36</Button>
            <Button Width="40" Height="20" Margin="0 5 5 5" Background="#fff" Click="Button_Click">89</Button>
            <Button Width="40" Height="20" Margin="0 5 5 5" Background="#101614" Foreground="White" Click="Button_Click">90</Button>
            <Button Width="40" Height="20" Margin="0 5 5 5" Background="#979994" Click="Button_Click">94</Button>
        </StackPanel>
    <Grid Width="390" Height="500">
        <Image Name="drawing" Stretch="Uniform" MouseLeftButtonDown="drawing_MouseLeftButtonDown"/>
        <Image Name="overlay" Stretch="Uniform" IsHitTestVisible="False" Source="/Overlay.png"/>
    </Grid>
    </DockPanel>
</Window>
