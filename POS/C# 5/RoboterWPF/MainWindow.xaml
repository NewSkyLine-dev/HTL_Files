<Window x:Class="RoboterWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:controls="clr-namespace:RoboterWPF.Controls"
        mc:Ignorable="d"
        Title="Roboter" Height="600" Width="900"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Menu Bar -->
        <Menu Grid.Row="0">
            <MenuItem Header="_File">
                <MenuItem Header="O_pen Level" x:Name="OpenLevelMenuItem" Click="OpenLevelMenuItem_Click"/>
                <MenuItem Header="Open _Program" x:Name="OpenProgramMenuItem" Click="OpenProgramMenuItem_Click"/>
                <Separator/>
                <MenuItem Header="E_xit" Click="ExitMenuItem_Click"/>
            </MenuItem>
        </Menu>

        <!-- Main Content -->
        <Grid Grid.Row="1" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Robot Map -->
            <Border Grid.Column="0" BorderBrush="DarkGray" BorderThickness="1" Margin="0,0,10,0">
                <controls:RobotMap x:Name="RobotMapControl"/>
            </Border>

            <!-- Right Panel with Program Input and Execute Button -->
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Text="Program:" FontWeight="Bold" Margin="0,0,0,5"/>

                <TextBox Grid.Row="1"
                         x:Name="ProgramInput"
                         AcceptsReturn="True"
                         AcceptsTab="True"
                         VerticalScrollBarVisibility="Auto"
                         HorizontalScrollBarVisibility="Auto"
                         FontFamily="Consolas"
                         FontSize="12"
                         TextWrapping="NoWrap"/>

                <Button Grid.Row="2"
                        x:Name="ExecuteButton"
                        Content="Execute Program"
                        Click="ExecuteButton_Click"
                        Margin="0,10,0,0"
                        Padding="10,5"
                        FontWeight="Bold"/>
            </Grid>
        </Grid>
    </Grid>
</Window>
