<Window x:Class="CalculatorWPF.VariableInputDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Enter Variable Value" 
        Height="150" Width="350"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        ShowInTaskbar="False">
    
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <TextBlock Grid.Row="0" 
                   x:Name="PromptText"
                   FontSize="14"
                   Margin="0,0,0,10"
                   Text="Enter value for variable 'x':"/>
        
        <TextBox Grid.Row="1" 
                 x:Name="ValueTextBox"
                 FontSize="18"
                 FontFamily="Consolas"
                 Padding="5"
                 KeyDown="ValueTextBox_KeyDown"/>
        
        <StackPanel Grid.Row="3" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right"
                    Margin="0,15,0,0">
            <Button Content="OK" 
                    Width="80" 
                    Padding="5"
                    IsDefault="True"
                    Click="OkButton_Click"/>
            <Button Content="Cancel" 
                    Width="80" 
                    Padding="5"
                    Margin="10,0,0,0"
                    IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>
