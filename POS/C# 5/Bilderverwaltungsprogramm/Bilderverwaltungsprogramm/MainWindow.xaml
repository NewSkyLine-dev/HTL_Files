<Window x:Class="Bilderverwaltungsprogramm.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Bilderverwaltungsprogramm"
        mc:Ignorable="d"
        Title="Bilderverwaltungsprogramm" Height="600" Width="1000"
        Closing="Window_Closing">
    <Window.CommandBindings>
        <CommandBinding Command="ApplicationCommands.New" Executed="NewAlbum_Executed"/>
        <CommandBinding Command="ApplicationCommands.Open" Executed="AddImages_Executed"/>
        <CommandBinding Command="{x:Static local:MainWindow.MoveImagesCommand}" Executed="MoveImages_Executed"/>
        <CommandBinding Command="ApplicationCommands.Delete" Executed="DeleteImages_Executed"/>
        <CommandBinding Command="{x:Static local:MainWindow.RotateClockwiseCommand}" Executed="RotateClockwise_Executed"/>
        <CommandBinding Command="{x:Static local:MainWindow.RotateCounterClockwiseCommand}" Executed="RotateCounterClockwise_Executed"/>
        <CommandBinding Command="{x:Static local:MainWindow.Rotate180Command}" Executed="Rotate180_Executed"/>
    </Window.CommandBindings>

    <Window.Resources>
        <DataTemplate x:Key="ImageTemplate">
            <Border BorderBrush="Gray" BorderThickness="1" Margin="5" Padding="5">
                <StackPanel Width="150">
                    <Image Source="{Binding Thumbnail}" Height="150" Width="150" Stretch="Uniform"/>
                    <TextBlock Text="{Binding DisplayName}" HorizontalAlignment="Center" 
                               Margin="0,5,0,0" TextWrapping="Wrap" TextAlignment="Center"/>
                </StackPanel>
            </Border>
        </DataTemplate>
    </Window.Resources>

    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_Datei">
                <MenuItem Header="_Neues Album" Command="ApplicationCommands.New" InputGestureText="Ctrl+N">
                    <MenuItem.Icon>
                        <TextBlock Text="&#xE8F4;" FontFamily="Segoe MDL2 Assets" FontSize="14"/>
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="Bilder _hinzufügen" Command="ApplicationCommands.Open" InputGestureText="Ctrl+O">
                    <MenuItem.Icon>
                        <TextBlock Text="&#xE8E5;" FontFamily="Segoe MDL2 Assets" FontSize="14"/>
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="Bilder in Album _verschieben" Command="{x:Static local:MainWindow.MoveImagesCommand}" InputGestureText="Ctrl+M">
                    <MenuItem.Icon>
                        <TextBlock Text="&#xE8DE;" FontFamily="Segoe MDL2 Assets" FontSize="14"/>
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="Bilder _löschen" Command="ApplicationCommands.Delete" InputGestureText="Delete">
                    <MenuItem.Icon>
                        <TextBlock Text="&#xE74D;" FontFamily="Segoe MDL2 Assets" FontSize="14"/>
                    </MenuItem.Icon>
                </MenuItem>
            </MenuItem>
            <MenuItem Header="_Bearbeiten">
                <MenuItem Header="90° _im Uhrzeigersinn rotieren" Command="{x:Static local:MainWindow.RotateClockwiseCommand}" InputGestureText="Ctrl+R">
                    <MenuItem.Icon>
                        <TextBlock Text="&#xE7AD;" FontFamily="Segoe MDL2 Assets" FontSize="14"/>
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="90° _gegen den Uhrzeigersinn rotieren" Command="{x:Static local:MainWindow.RotateCounterClockwiseCommand}" InputGestureText="Ctrl+Shift+R">
                    <MenuItem.Icon>
                        <TextBlock Text="&#xE7AC;" FontFamily="Segoe MDL2 Assets" FontSize="14"/>
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="180° ro_tieren" Command="{x:Static local:MainWindow.Rotate180Command}" InputGestureText="Ctrl+T">
                    <MenuItem.Icon>
                        <TextBlock Text="&#xE7AD;" FontFamily="Segoe MDL2 Assets" FontSize="14"/>
                    </MenuItem.Icon>
                </MenuItem>
            </MenuItem>
        </Menu>

        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="10,5">
            <Label Content="Album:" VerticalAlignment="Center" Margin="0,0,5,0"/>
            <ComboBox x:Name="cmbAlbums" Width="250" 
                      ItemsSource="{Binding Albums}" 
                      SelectedItem="{Binding CurrentAlbumName}" 
                      SelectionChanged="CmbAlbums_SelectionChanged"/>
        </StackPanel>

        <ListBox x:Name="lstImages" 
                 ItemsSource="{Binding CurrentImages}"
                 ItemTemplate="{StaticResource ImageTemplate}"
                 SelectionMode="Extended"
                 ScrollViewer.HorizontalScrollBarVisibility="Disabled">
            <ListBox.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel Orientation="Horizontal"/>
                </ItemsPanelTemplate>
            </ListBox.ItemsPanel>
        </ListBox>
    </DockPanel>
</Window>
