<Window x:Class="Taschenrechner.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Taschenrechner"
        mc:Ignorable="d"
        Title="Taschenrechner"
        Height="600"
        Width="400"
        MinHeight="400"
        MinWidth="300">

    <Window.Resources>
        <!-- Basis-Stil für alle Buttons -->
        <Style x:Key="BaseButtonStyle"
                TargetType="Button">
            <Setter Property="Margin"
                    Value="3"/>
            <Setter Property="FontSize"
                    Value="20"/>
            <Setter Property="FontWeight"
                    Value="SemiBold"/>
            <Setter Property="BorderThickness"
                    Value="1"/>
            <Setter Property="BorderBrush"
                    Value="#CCCCCC"/>
        </Style>

        <!-- Zahlen-Buttons -->
        <Style x:Key="NumButtonStyle"
                TargetType="Button"
                BasedOn="{StaticResource BaseButtonStyle}">
            <Setter Property="Background"
                    Value="#FFFFFF"/>
            <Setter Property="Foreground"
                    Value="#333333"/>
        </Style>

        <!-- Operator-Buttons -->
        <Style x:Key="OpButtonStyle"
                TargetType="Button"
                BasedOn="{StaticResource BaseButtonStyle}">
            <Setter Property="Background"
                    Value="#E8E8E8"/>
            <Setter Property="Foreground"
                    Value="#555555"/>
        </Style>

        <!-- Variablen-Buttons -->
        <Style x:Key="VarButtonStyle"
                TargetType="Button"
                BasedOn="{StaticResource BaseButtonStyle}">
            <Setter Property="Background"
                    Value="#E3F2FD"/>
            <Setter Property="Foreground"
                    Value="#1565C0"/>
        </Style>

        <!-- Löschen-Button -->
        <Style x:Key="ClearButtonStyle"
                TargetType="Button"
                BasedOn="{StaticResource BaseButtonStyle}">
            <Setter Property="Background"
                    Value="#FFEBEE"/>
            <Setter Property="Foreground"
                    Value="#C62828"/>
        </Style>

        <!-- Auswerten-Button -->
        <Style x:Key="EvalButtonStyle"
                TargetType="Button"
                BasedOn="{StaticResource BaseButtonStyle}">
            <Setter Property="Background"
                    Value="#4CAF50"/>
            <Setter Property="Foreground"
                    Value="White"/>
            <Setter Property="FontSize"
                    Value="24"/>
        </Style>
    </Window.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Ergebnis-Anzeige -->
        <Border Grid.Row="0"
                Background="#F0F0F0"
                BorderBrush="#CCCCCC"
                BorderThickness="1"
                CornerRadius="5"
                Margin="0,0,0,10"
                MinHeight="60">
            <TextBlock x:Name="ResultDisplay"
                       Text="0"
                       FontSize="28"
                       FontWeight="SemiBold"
                       TextAlignment="Right"
                       VerticalAlignment="Center"
                       Padding="15,10"
                       TextWrapping="Wrap"/>
        </Border>

        <!-- Eingabe-TextBox -->
        <TextBox x:Name="InputTextBox"
                 Grid.Row="1"
                 FontSize="18"
                 Height="40"
                 Padding="10,5"
                 Margin="0,0,0,10"
                 VerticalContentAlignment="Center"
                 Text=""
                 KeyDown="InputTextBox_KeyDown"/>

        <!-- Button-Grid -->
        <Grid Grid.Row="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Zeile 0: Variablen und Löschen -->
            <Button Grid.Row="0"
                    Grid.Column="0"
                    Content="x"
                    Click="Button_Click"
                    Style="{StaticResource VarButtonStyle}"/>
            <Button Grid.Row="0"
                    Grid.Column="1"
                    Content="y"
                    Click="Button_Click"
                    Style="{StaticResource VarButtonStyle}"/>
            <Button Grid.Row="0"
                    Grid.Column="2"
                    Content="z"
                    Click="Button_Click"
                    Style="{StaticResource VarButtonStyle}"/>
            <Button Grid.Row="0"
                    Grid.Column="3"
                    Content="C"
                    Click="ClearButton_Click"
                    Style="{StaticResource ClearButtonStyle}"/>

            <!-- Zeile 1: Potenz, Klammern, Division -->
            <Button Grid.Row="1"
                    Grid.Column="0"
                    Content="^"
                    Click="Button_Click"
                    Style="{StaticResource OpButtonStyle}"/>
            <Button Grid.Row="1"
                    Grid.Column="1"
                    Content="("
                    Click="Button_Click"
                    Style="{StaticResource OpButtonStyle}"/>
            <Button Grid.Row="1"
                    Grid.Column="2"
                    Content=")"
                    Click="Button_Click"
                    Style="{StaticResource OpButtonStyle}"/>
            <Button Grid.Row="1"
                    Grid.Column="3"
                    Content="/"
                    Click="Button_Click"
                    Style="{StaticResource OpButtonStyle}"/>

            <!-- Zeile 2: 7, 8, 9, * -->
            <Button Grid.Row="2"
                    Grid.Column="0"
                    Content="7"
                    Click="Button_Click"
                    Style="{StaticResource NumButtonStyle}"/>
            <Button Grid.Row="2"
                    Grid.Column="1"
                    Content="8"
                    Click="Button_Click"
                    Style="{StaticResource NumButtonStyle}"/>
            <Button Grid.Row="2"
                    Grid.Column="2"
                    Content="9"
                    Click="Button_Click"
                    Style="{StaticResource NumButtonStyle}"/>
            <Button Grid.Row="2"
                    Grid.Column="3"
                    Content="*"
                    Click="Button_Click"
                    Style="{StaticResource OpButtonStyle}"/>

            <!-- Zeile 3: 4, 5, 6, - -->
            <Button Grid.Row="3"
                    Grid.Column="0"
                    Content="4"
                    Click="Button_Click"
                    Style="{StaticResource NumButtonStyle}"/>
            <Button Grid.Row="3"
                    Grid.Column="1"
                    Content="5"
                    Click="Button_Click"
                    Style="{StaticResource NumButtonStyle}"/>
            <Button Grid.Row="3"
                    Grid.Column="2"
                    Content="6"
                    Click="Button_Click"
                    Style="{StaticResource NumButtonStyle}"/>
            <Button Grid.Row="3"
                    Grid.Column="3"
                    Content="-"
                    Click="Button_Click"
                    Style="{StaticResource OpButtonStyle}"/>

            <!-- Zeile 4: 1, 2, 3, + -->
            <Button Grid.Row="4"
                    Grid.Column="0"
                    Content="1"
                    Click="Button_Click"
                    Style="{StaticResource NumButtonStyle}"/>
            <Button Grid.Row="4"
                    Grid.Column="1"
                    Content="2"
                    Click="Button_Click"
                    Style="{StaticResource NumButtonStyle}"/>
            <Button Grid.Row="4"
                    Grid.Column="2"
                    Content="3"
                    Click="Button_Click"
                    Style="{StaticResource NumButtonStyle}"/>
            <Button Grid.Row="4"
                    Grid.Column="3"
                    Content="+"
                    Click="Button_Click"
                    Style="{StaticResource OpButtonStyle}"/>

            <!-- Zeile 5: 0, ., = -->
            <Button Grid.Row="5"
                    Grid.Column="0"
                    Content="0"
                    Click="Button_Click"
                    Style="{StaticResource NumButtonStyle}"/>
            <Button Grid.Row="5"
                    Grid.Column="1"
                    Content=","
                    Click="Button_Click"
                    Style="{StaticResource NumButtonStyle}"/>
            <Button Grid.Row="5"
                    Grid.Column="2"
                    Grid.ColumnSpan="2"
                    Content="="
                    Click="EvaluateButton_Click"
                    Style="{StaticResource EvalButtonStyle}"/>
        </Grid>
    </Grid>
</Window>
